{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "lib": [
      "es2020", "esnext"
    ],
    "module": "commonjs",
    "target": "es2020",
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": "./"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
  ],
  "exclude": [
    "node_modules",
    "src/**/*.int.ts",
    "src/**/*.unit.ts",
    "src/**/*.d.ts",
    "src/testing/**"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "ignore": [
      "(?:^|/)node_modules/", 
      // We ignore .d.ts files as ts-node fails if it tries to execute them.
      "\\.d\\.ts$"
    ]
  }
}