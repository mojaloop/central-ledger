    "blipp": "4.0.2",
    "commander": "14.0.3",
    "cron": "4.4.0",
    "decimal.js": "10.6.0",
    "docdash": "2.0.2",
    "event-stream": "4.0.1",
    "five-bells-condition": "5.0.1",
    "glob": "10.5.0",
    "hapi-auth-bearer-token": "8.0.0",
    "hapi-swagger": "17.3.2",
    "ilp-packet": "2.2.0",
    "joi": "18.0.1",
    "knex": "3.1.0",
    "lodash": "4.17.23",
    "moment": "2.30.1",
    "mongo-uri-builder": "^4.0.0",
    "parse-strings-in-object": "2.0.0",
    "rc": "1.2.8",
    "require-glob": "^4.1.0"
  },
  "optionalDependencies": {
    "ed25519": "^0.0.5",
