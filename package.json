    },
    "hapi-auth-bearer-token": {
      "joi": "18.0.1"
    },
    "hapi-swagger": {
      "joi": "18.0.1"
    },
    "jsonwebtoken": "9.0.0",
    "jsonpointer": "5.0.0",
    "on-headers": "1.1.0",
    "trim": "0.0.3",
    "cross-spawn": "7.0.6",
    "yargs-parser": "21.1.1",
    "fast-xml-parser": "5.3.4"
  },
  "config": {
    "knex": "--knexfile ./src/knexfile.js",
    "images": {
      "api": "central-ledger",
      "admin": "central-ledger-admin"
    }
  },
  "standard": {
    "ignore": [
      "/migrations/**"
    ]
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "replace '\\[mojaloop/#(\\d+)\\]\\(https://github.com/mojaloop/(.*)/issues/(\\d+)\\)' '[mojaloop/#$1](https://github.com/mojaloop/project/issues/$1)' CHANGELOG.md"
    }
  }
}
