[
  {
    "ruleId": 1,
    "priority": 1,
    "description": "get /parties/{Type}/{ID}",
    "apiVersion": {
      "minorVersion": 0,
      "majorVersion": 1,
      "type": "fspiop",
      "asynchronous": true
    },
    "conditions": {
      "all": [
        {
          "fact": "operationPath",
          "operator": "equal",
          "value": "/parties/{Type}/{ID}"
        },
        {
          "fact": "method",
          "operator": "equal",
          "value": "get"
        }
      ]
    },
    "event": {
      "method": "put",
      "path": "/parties/{Type}/{ID}",
      "params": {
        "scripts": {
          "exec": [
            "const ttkAllowedAmount = pm.environment.get('ttkAllowedAmount')",
            "if (ttkAllowedAmount === undefined) {",
            "  pm.environment.set('ttkAllowedAmount', 1000)",
            "}"
          ]
        }
      },
      "type": "MOCK_CALLBACK"
    },
    "type": "callback",
    "version": 1
  },
  {
    "type": "callback",
